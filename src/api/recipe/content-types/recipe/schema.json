{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "name": "recipe"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.ingredients"
    },
    "course": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::course.course"
    },
    "cuisine": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::cuisine.cuisine"
    },
    "meal": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::meal.meal"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "recipes"
    },
    "method": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.method"
    },
    "image": {
      "type": "media",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "multiple": false,
      "required": false
    }
  }
}
